{
	"name": "GPULang",
	"description": "GPULang Language Server",
	"publisher": "gustavsterbrant",
	"license": "MIT",
	"version": "1.0.0",
	"icon": "temp-icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/gscept/GPULang"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"gpulang",
		"shader programming"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"languages": [{
		"id": "gpulang",
		"extensions": [".gpul", ".gpuh"],
		"aliases": ["GPULang", "gpulang"]
	}],
	"activationEvents": [
		"onLanguage:gpulang"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "GPULang Client Configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "gpulang",
				"aliases": [
					"GPULang",
					"gpulang"
				],
				"extensions": [
					"gpul",
					"gpuh"
				],
				"configuration": "./language-configuration.json"
			}
		],
		  "semanticTokenModifiers": [
			{ "id": "unused", "description": "Unused code" }
		],
		"grammars": [
			{
				"language": "gpulang",
				"scopeName": "source.gpulang",
				"path": "./syntaxes/gpulang.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
