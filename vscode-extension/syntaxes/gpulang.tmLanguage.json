{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "gpulang",
	"patterns": [
		{
			"name": "keyword.control",
			"match": "\\b(if|else|while|for|return|continue|break|switch|case|discard|ray_ignore|ray_terminate)\\b"
		}, {
			"name": "storage.modifier",
			"match": "\\b(uniform|workgroup|in|out|const|var)\\b"
		},{
			"match": "\\b(entry_point|struct|program|render_state|sampler_state|enum)\\b",
			"captures": {
				"1": { "name": "keyword.other" }
			}
		}, {
			"name": "entity.name.type",
			"match": "\\b(?:void|f32|i32|b8)(?:x[2-4])?(?:x[2-4])?\\b"
		}, {
			"name": "entity.name.type",
			"match": "\\b(texture1D|texture1DArray|texture2D|texture2DArray|texture2DMS|texture2DMSArray|textureCube|textureCubeArray|texture3D|sampler)\\b"
		}, {
			"match": "\\b(mutable)\\b",
			"captures": {
				"1": { "name": "keyword.other" }
			}
		}, {
			"name": "entity.name.function",
			"match": "\\b.*\\(.*\\)\\b"
		}, {
			"include": "#comment"
		}, {
			"include": "#strings"
		}, {
			"include": "#constants"
		}, {
			"include": "#preprocessor"
		}
	],
	"repository": {
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b\\d+((\\.\\d+f?)|u?)\\b"
				},
				{
					"name": "constant.language",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.gpulang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gpulang",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"begin": "//",
					"end": "\n"		
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"preprocessor": {
			"patterns": [
				{
					"begin": "(#\\b(?:include|define|ifdef|ifndef|elif|elifdef))\\b(.+)\\b",
					"beginCaptures": {
						"1": { "name": "keyword" },
						"2": { "name": "string" }
					},
					"end": "\n"
				},
				{
					"begin": "(#\\b(?:else|endif))\\b",
					"beginCaptures": {
						"1": { "name": "keyword" }
					},
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.gpulang"
}